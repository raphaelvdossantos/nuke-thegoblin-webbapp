  />
</div>

<style>
  .container {
    height: fit-content;

    display: grid;
    grid-template-areas:
      "h1 h1"
      "spells fumble"
      "dice phrases";

    justify-content: space-evenly;

    box-shadow: #d0d4cf -25px 25px;
    background-color: #0a9e85;

    border-radius: 25px;

    width: 90%;
    margin: auto;
  }

  h1 {
    font-family: Satisfy;
    grid-area: h1;
    justify-self: center;

    color: #e2e3de;
  }

  .spells {
    grid-area: spells;
  }

  .fumble {
    grid-area: fumble;
  }

  .dice {
    grid-area: dice;
  }

  .phrases {
    grid-area: phrases;
  }
</style>
