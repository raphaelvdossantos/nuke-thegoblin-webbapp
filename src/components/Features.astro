---
import spells from "../assets/spellIcon.svg";
import fumble from "../assets/fumbleIcon.svg";
import dice from "../assets/diceIcon.svg";
import phrases from "../assets/phrasesIcon.svg";

import Feature from "./Feature.astro";
---

